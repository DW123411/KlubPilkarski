@model IEnumerable<KlubPilkarski.Models.Klub>

@{
    ViewBag.Title = "Lista klubów";
}

<h2>Lista klubów</h2>

<p align="right">
    <button type="button" class="btn btn-primary add-button"
            onclick="location.href='@Url.Action("Create", "Klub")'"
            data-toggle="tooltip" data-placement="top" title="Dodaj klub">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodaj klub
    </button>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                Trener
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                Trener
            </th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trener.Imie) @Html.DisplayFor(modelItem => item.Trener.Nazwisko)
                </td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm edit-button"
                            onclick="location.href='@Url.Action("Edit", "Klub", new { id = item.IdK })'"
                            data-toggle="tooltip" data-placement="top" title="Edytuj klub">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-primary btn-sm"
                            onclick="location.href='@Url.Action("Details", "Klub", new { id = item.IdK })'"
                            data-toggle="tooltip" data-placement="top" title="Pokaż szczegółowe informacje">
                        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm delete-button"
                            onclick="location.href='@Url.Action("Delete", "Klub", new { id = item.IdK })'"
                            data-toggle="tooltip" data-placement="top" title="Usuń klub">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>
