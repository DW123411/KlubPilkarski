@model IEnumerable<KlubPilkarski.Models.Kolejka>

@{
    ViewBag.Title = "Lista kolejek";
}

<h2>Lista kolejek</h2>

<p align="right">
    <button type="button" class="btn btn-primary add-button"
            onclick="location.href='@Url.Action("Create", "Kolejka")'"
            data-toggle="tooltip" data-placement="top" title="Dodaj kolejkę">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodaj kolejkę
    </button>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                Numer kolejki
            </th>
            <th>
                Data rozpoczęcia i zakończenia
            </th>
            <th></th>
        </tr>
    </thead>

    <tfoot>
        <tr>
            <th>
                Numer kolejki
            </th>
            <th>
                Data rozpoczęcia i zakończenia
            </th>
            <th></th>
        </tr>
    </tfoot>

    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataOd) - @Html.DisplayFor(modelItem => item.DataDo)
                </td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm edit-button"
                            onclick="location.href='@Url.Action("Edit", "Kolejka", new { id = item.IdKolejka })'"
                            data-toggle="tooltip" data-placement="top" title="Edytuj kolejkę">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm delete-button"
                            onclick="location.href='@Url.Action("Delete", "Kolejka", new { id = item.IdKolejka })'"
                            data-toggle="tooltip" data-placement="top" title="Usuń kolejkę">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>
