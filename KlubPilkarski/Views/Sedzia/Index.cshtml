@model IEnumerable<KlubPilkarski.Models.Sedzia>

@{
    ViewBag.Title = "Lista sędziów";
}

<h2>Lista sędziów</h2>

<p align="right">
    <button type="button" class="btn btn-primary add-button"
            onclick="location.href='@Url.Action("Create", "Sedzia")'"
            data-toggle="tooltip" data-placement="top" title="Dodaj sędziego">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodaj sędziego
    </button>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                Imię
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Imie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm edit-button"
                            onclick="location.href='@Url.Action("Edit", "Sedzia", new { id = item.IdSedzia })'"
                            data-toggle="tooltip" data-placement="top" title="Edytuj sędziego">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm delete-button"
                            onclick="location.href='@Url.Action("Delete", "Sedzia", new { id = item.IdSedzia })'"
                            data-toggle="tooltip" data-placement="top" title="Usuń sędziego">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>
